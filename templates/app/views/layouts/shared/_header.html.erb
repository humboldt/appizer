<%= cms_flash_messages %>

<% cms_cache do
   main_nav = cms_link('main-navigation', 0, Float::INFINITY)
   secondary_nav = cms_link('secondary-navigation', 0, Float::INFINITY)
-%>

<%= navbar fluid: true do %>
  <%= vertical main_nav.sortable do %>

    <%= link_to root_path do %>
      <%= image_tag '/images/mini/missing.png' %>
    <% end %>

    <% if current_admin? %>
      <%= cms_link_to_edit_mode %>
      <%= link_to icon('cog'), rails_admin.dashboard_path, 'data-no-turbolink' => true %>
    <% end %>

    <% main_nav.each do |link| %>
      <%= link.sortable_link_to do %>
        <%= link.edit_link %>
      <% end %>
    <% end %>
    <%= main_nav.add_link %>

  <% end %>

  <%= horizontal do %>
    <%= nav secondary_nav.sortable(class: 'navbar-right') do %>

        <% secondary_nav.each do |link| %>
          <%= link.sortable_link_to do %>
            <%= link.edit_link %>
          <% end %>
        <% end %>
        <%= secondary_nav.add_link %>

        <% cms_locale_links.each do |locale_link| %>
          <%= locale_link %>
        <% end %>

        <% if current_user? %>
          <%= link_to icon('user'), edit_user_registration_path %>
          <%= link_to icon('off', class: 'text-danger'), destroy_user_session_path %>
        <% else %>
          <%= link_to icon('user'), new_user_session_path %>
        <% end %>

    <% end %>
  <% end %>
<% end %>

<% end %>
