<%# view = nice_page %>

<% nice_cache do
   menu = nice_link(0, Float::INFINITY)
   image = nice_image
   blocks = nice_example(1, 4)
   # view_image = nice_view_image
   # view_block = nice_view_example
-%>

<%#= view.edit_link %>
<%#= view.add_link %>

<%= content_tag(:ul, menu.sortable) do %>
  <% menu.each do |link| %>
    <%= link.sortable_link_to %>
    <%= link.edit_link %>
  <% end %>
<% end %>
<%= menu.add_link %>

<%= image_tag image.path %>
<%= image.edit_link %>

<% blocks.each do |block| %>
  <%= block.render %>
<% end %>
<%= blocks.edit_links(:position) %>

<% end %>
